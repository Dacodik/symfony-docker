{% extends 'base.html.twig' %}

{% block title %}Edition Article{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Éditer l'article</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'action': path('article_edit', {'id': article.id})}) }}
                        <div class="form-group">
                            {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.texte, 'Texte', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.texte, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.texte) }}
                        </div>
                        <div class="form-group form-check">
                            {{ form_widget(form.publie, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.publie, 'Publié', {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(form.publie) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date) }}
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}