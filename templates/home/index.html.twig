{% extends 'home.html.twig' %}

{% block title %}Hello LuckyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-5">
                <h1>Gestionnaire d'article</h1>
                <p class="lead">Découvrez les fonctionnalités de notre générateur ci-dessous!</p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="{{ asset('img/new.png') }}" class="card-img-top" alt="new">
                <div class="card-body">
                    <h5 class="card-title">Nouvel article</h5>
                    <a href="{{ path('article_new') }}" class="btn btn-primary">Créer un nouvel article</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="{{ asset('img/list.png') }}" class="card-img-top" alt="list">
                <div class="card-body">
                    <h5 class="card-title">Liste des articles</h5>
                    <a href="{{ path('list_article') }}" class="btn btn-primary">Voir la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}